# get "$TMP" "mods/PortalGun.jar" 'http://199.91.153.137/fvfq1v3d3u8g/v7ouuz9gnzxuxxc/PortalGun1.4.7v4.zip' # http://ichun.us/mods/portalgun/download/

cp -a "$TMP/" "server"
